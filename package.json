{
  "name": "anchor-idl-filter",
  "version": "1.2.2",
  "description": "CLI to filter, transform Anchor IDL (v0.30.0 or newer) files by instructions, accounts, types, events, and errors. Perfect for creating lightweight IDL files for specific use cases.",
  "bin": {
    "idl-filter": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "start": "tsx src/index.ts",
    "lint": "prettier --check \"src/**/*.{js,cjs,json,ts,d.ts}\" && eslint .",
    "lint:fix": "eslint --fix .",
    "test": "echo \"No tests implemented yet\" && exit 0",
    "typecheck": "tsc --noEmit",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "anchor",
    "solana",
    "idl",
    "cli",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobondar/idl-filter.git"
  },
  "bugs": {
    "url": "https://github.com/wobondar/idl-filter/issues"
  },
  "homepage": "https://github.com/wobondar/idl-filter#readme",
  "author": "wobondar",
  "license": "MIT",
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "src",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@eslint/js": "^9.28.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "camelcase": "^8.0.0",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.3.4",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  }
}
